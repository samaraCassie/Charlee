# ===========================================
# Charlee Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# APPLICATION
# ===========================================
APP_ENV=development
DEBUG=true
SECRET_KEY=your_secret_key_here
ENVIRONMENT=development  # development, staging, production

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# For Docker: postgresql://charlee_user:charlee_pass@postgres:5432/charlee_db
# For Local: postgresql://charlee:your_password@localhost:5432/charlee_db
DATABASE_URL=postgresql://charlee_user:charlee_pass@postgres:5432/charlee_db

# Connection pool settings (optional, defaults are fine for dev)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===========================================
# REDIS (Optional - for caching and sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI API (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (for Claude models - optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ===========================================
# CORS & SECURITY
# ===========================================
# Frontend URL for production (optional, defaults to localhost in dev)
FRONTEND_URL=http://localhost:3000

# JWT Authentication
# Generate secure keys with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production_use_openssl_rand_hex_32
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key_change_in_production_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Authentication (Optional)
# Google OAuth - Get credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth - Get credentials from https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry for error tracking (production)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# INTEGRATIONS (Future)
# ===========================================
# Google Calendar
# GOOGLE_CALENDAR_CLIENT_ID=
# GOOGLE_CALENDAR_CLIENT_SECRET=

# Notion
# NOTION_API_KEY=

# Trello
# TRELLO_API_KEY=

# ===========================================
# QUICK START COMMANDS
# ===========================================
# Generate a secure SECRET_KEY:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Create database (local):
#   createdb charlee_db
#
# Run migrations:
#   alembic upgrade head
#
# Start development server:
#   uvicorn api.main:app --reload --port 8000
