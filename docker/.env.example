# ============================================
# POSTGRES DATABASE
# ============================================
POSTGRES_USER=charlee
POSTGRES_PASSWORD=change_me_in_production_use_strong_password
POSTGRES_DB=charlee_db

# ============================================
# OPENAI API
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# ANTHROPIC API (opcional)
# ============================================
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# APPLICATION
# ============================================
APP_ENV=development
DEBUG=true
SECRET_KEY=generate-with-python-secrets-token-urlsafe-32

# ============================================
# API SERVER
# ============================================
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# INTEGRATIONS
# ============================================
# Google Calendar OAuth
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/calendar/callback/google

# Microsoft Calendar OAuth
MICROSOFT_CALENDAR_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CALENDAR_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALENDAR_REDIRECT_URI=http://localhost:3000/calendar/callback/microsoft

# Future integrations
# NOTION_API_KEY=
# TRELLO_API_KEY=

