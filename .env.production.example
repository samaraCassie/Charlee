# Charlee Production Environment Variables
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to git!

# ========================================
# Database
# ========================================
# Supabase example:
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Connection pool settings (adjust for your tier)
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=3
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ========================================
# Redis
# ========================================
# Upstash example:
REDIS_URL=redis://default:[PASSWORD]@[HOST].upstash.io:6379

# ========================================
# Authentication & JWT
# ========================================
# Generate secure keys with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# Anthropic API
# ========================================
ANTHROPIC_API_KEY=sk-ant-api03-...

# ========================================
# Application
# ========================================
APP_ENV=production
DEBUG=false

# Frontend URL (for CORS)
# Vercel example:
FRONTEND_URL=https://your-app.vercel.app

# ========================================
# Optional: Third-party Integrations
# ========================================
# Google Calendar
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Notion
# NOTION_API_KEY=

# Monitoring
# SENTRY_DSN=
